---
import Layout from "../layouts/Layout.astro";
import { AppHeader } from "../components/AppHeader";
import { Button } from "../components/ui/button";
import type { User } from "../types";

// Check if user is authenticated
if (!Astro.locals.session) {
  return Astro.redirect("/login");
}

const authUser = Astro.locals.session.user;

// Get user data
let { data: userData } = await Astro.locals.supabase.from("users").select("*").eq("id", authUser.id).single();

const user = userData as User;
---

<Layout title="Profil - 10x Project">
  <AppHeader user={user} userEmail={authUser.email} slot="header" client:load />

  <main class="min-h-screen bg-gray-50 py-6 md:py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow p-6 md:p-8">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Profil użytkownika</h1>

        <div class="space-y-6">
          {/* User Information */}
          <div class="space-y-4">
            <div>
              <label class="text-sm font-medium text-gray-700">Email</label>
              <p class="mt-1 text-base text-gray-900">{authUser.email}</p>
            </div>

            <div>
              <label class="text-sm font-medium text-gray-700">Imię</label>
              <p class="mt-1 text-base text-gray-900">{user?.first_name || "Nie podano"}</p>
            </div>

            <div>
              <label class="text-sm font-medium text-gray-700">Nazwisko</label>
              <p class="mt-1 text-base text-gray-900">{user?.last_name || "Nie podano"}</p>
            </div>

            <div>
              <label class="text-sm font-medium text-gray-700">Rola</label>
              <p class="mt-1 text-base text-gray-900 capitalize">
                {user?.role ? user.role.replace("_", " ") : "Nie przypisano"}
              </p>
            </div>
          </div>

          {/* Actions */}
          <div class="pt-6 border-t">
            <Button variant="outline" className="w-full md:w-auto"> Edytuj profil </Button>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
